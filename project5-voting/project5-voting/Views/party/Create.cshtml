@model project5_voting.Models.partyCandidate

@{
    ViewBag.Title = "إنشاء مرشح";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="form-background p-4">
                @using (Html.BeginForm())
                {
                    <h2 class="text-center mb-4">إنشاء مرشح جديد</h2>

                    @Html.AntiForgeryToken()

                    <div class="form-horizontal p-4 rounded shadow-sm bg-white">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group mb-3">
                            <label for="email" class="form-label">البريد الإلكتروني</label>
                            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            <label for="name" class="form-label">الاسم</label>
                            @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            <label for="phone" class="form-label">رقم الهاتف</label>
                            @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            <label for="nationalId" class="form-label">الرقم الوطني</label>
                            @Html.EditorFor(model => model.nationalId, new { htmlAttributes = new { @class = "form-control", @id = "nationalId" } })
                            @Html.ValidationMessageFor(model => model.nationalId, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            <label for="gender" class="form-label">الجنس</label>
                            @Html.DropDownListFor(model => model.gender, new SelectList(new List<SelectListItem>
                            {
                                new SelectListItem { Value = "Male", Text = "ذكر" },
                                new SelectListItem { Value = "Female", Text = "أنثى" }
                            }, "Value", "Text"), "اختر الجنس", new { @class = "form-control", @id = "gender" })
                            @Html.ValidationMessageFor(model => model.gender, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            <label for="birthDay" class="form-label">تاريخ الميلاد</label>
                            @Html.TextBoxFor(model => model.birthDay, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                            @Html.ValidationMessageFor(model => model.birthDay, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            <label for="typeOfChair" class="form-label">نوع المقعد</label>
                            @Html.DropDownListFor(model => model.typeOfChair,
                                new List<SelectListItem>
                                {
                                    new SelectListItem { Text = "تنافسية", Value = "تنافسية" },
                                    new SelectListItem { Text = "مسيحية", Value = "مسيحية" },
                                    new SelectListItem { Text = "شركسية", Value = "شركسية" }
                                },
                                new { @class = "form-control", @required = "required" })
                            @Html.ValidationMessageFor(model => model.typeOfChair, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            <label for="religion" class="form-label">الدين</label>
                            @Html.DropDownListFor(model => model.religion, new SelectList(new List<SelectListItem>
                            {
                                new SelectListItem { Text = "مسلم", Value = "مسلم" },
                                new SelectListItem { Text = "مسيحي", Value = "مسيحي" }
                            }, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.religion, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            <label for="electoralDistrict" class="form-label">المنطقة الانتخابية</label>
                            @Html.DropDownListFor(model => model.electoralDistrict,
                                new List<SelectListItem>
                                {
                                    new SelectListItem { Text = "عمان الاولى", Value = "عمان1" },
                                    new SelectListItem { Text = "عمان الثانية", Value = "عمان2" },
                                    new SelectListItem { Text = "عمان الثالثة", Value = "عمان3" },
                                    new SelectListItem { Text = "إربد الاولى ", Value = "إربد1" },
                                    new SelectListItem { Text = "إربد الثانية", Value = "إربد2" },
                                    new SelectListItem { Text = "البلقاء", Value = "البلقاء" },
                                    new SelectListItem { Text = "الكرك", Value = "الكرك" },
                                    new SelectListItem { Text = "معان", Value = "معان" },
                                    new SelectListItem { Text = "الزرقاء", Value = "الزرقاء" },
                                    new SelectListItem { Text = "المفرق", Value = "المفرق" },
                                    new SelectListItem { Text = "الطفيلة", Value = "الطفيلة" },
                                    new SelectListItem { Text = "مادبا", Value = "مادبا" },
                                    new SelectListItem { Text = "جرش", Value = "جرش" },
                                    new SelectListItem { Text = "عجلون", Value = "عجلون" },
                                    new SelectListItem { Text = "العقبة", Value = "العقبة" },
                                    new SelectListItem { Text = "البادية", Value = "البادية" },
                                    new SelectListItem { Text = "بدوي شمال", Value = "بدوي شمال" },
                                    new SelectListItem { Text = "بدوي وسط", Value = "بدوي وسط" },
                                    new SelectListItem { Text = "بدوي جنوب", Value = "بدوي جنوب" }
                                },
                                new { @class = "form-control", @required = "required" })
                            @Html.ValidationMessageFor(model => model.electoralDistrict, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group text-center mt-4">
                            <input type="submit" value="إنشاء" class="btn btn-primary btn-animate mx-2" />
                            @Html.ActionLink("العودة إلى القائمة", "Index", null, new { @class = "btn btn-secondary btn-animate mx-2" })
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<style>
    body {
        background-color: #f0f4f8; /* خلفية خفيفة */
        font-family: 'Arial', sans-serif;
    }

    h2 {
        font-weight: bold;
        color: #003366; /* كحلي داكن */
    }

    .form-background {
        background-color: #ffffff; /* خلفية بيضاء */
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-horizontal {
        background-color: #ffffff; /* خلفية بيضاء */
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-label {
        font-weight: bold;
        color: #003366; /* كحلي داكن */
    }

    .btn-primary {
        background-color: #004080; /* كحلي */
        border-color: #003366; /* كحلي داكن */
    }

        .btn-primary:hover {
            background-color: #003366; /* كحلي داكن */
            border-color: #002244; /* كحلي أغمق */
        }

    .btn-secondary {
        background-color: #0066cc; /* كحلي متوسط */
        border-color: #005bb5; /* كحلي أغمق */
    }

        .btn-secondary:hover {
            background-color: #005bb5; /* كحلي أغمق */
            border-color: #004080; /* كحلي */
        }

    .btn-animate {
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .btn-animate:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

    .form-control {
        border-radius: 5px;
        box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 15px;
    }

    .text-danger {
        color: #dc3545; /* لون أحمر للأخطاء */
    }
</style>

