<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="~/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville:wght@700&family=Open+Sans:wght@400;500;600&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/lib/lightbox/css/lightbox.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">

    <style>
        .btn-secondary {
            color: #ffff;
            background-color: forestgreen;
            border-color: forestgreen;
        }
    </style>
</head>

<body>
    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg bg-white navbar-light sticky-top px-4 px-lg-5" style="direction: rtl;">
        <a href="@Url.Action("Index", "Home")" class="navbar-brand d-flex align-items-center">
            <h1 class="m-0">الانتخابات الأردنية</h1>
        </a>
        <button type="button" class="navbar-toggler ms-0" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="d-flex align-items-center w-100">
                <div class="navbar-nav mx-auto p-4 p-lg-0">
                    <a href="@Url.Action("Index", "Home")" class="nav-item nav-link active">الرئيسية</a>
                    <a href="@Url.Action("About", "Home")" class="nav-item nav-link">عنا</a>
                    <a href="@Url.Action("Service", "Home")" class="nav-item nav-link">الاعلانات</a>
                    <a href="@Url.Action("Product", "Home")" class="nav-item nav-link">سياساتنا</a>
                    <a href="@Url.Action("Product", "Home")" class="nav-item nav-link">الدوائر الانتخابية</a>
                    <a href="@Url.Action("Product", "Home")" class="nav-item nav-link">طلب الترشح</a>
                    <a href="@Url.Action("Product", "Home")" class="nav-item nav-link">مناظرات</a>
                    <a href="@Url.Action("Contact", "Home")" class="nav-item nav-link">اتصل بنا</a>
                </div>
                <a href="@Url.Action("Login", "Account")" class="nav-item nav-link ms-3">تسجيل الدخول</a>
            </div>
        </div>
    </nav>


    <!-- Navbar End -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer Start -->
    <div class="container-fluid bg-dark footer mt-5 py-5 wow fadeIn" data-wow-delay="0.1s" style="direction: rtl;">
        <div class="container py-5">
            <div class="row g-5">
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-white mb-4">الانتخابات الأردنية</h5>
                    <p>موقع خاص بتنظيم عملية الانتخاب. ويسهل عملية الانتخاب في جميع أنحاء المملكة الأردنية الهاشمية.</p>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-white mb-4">مكتبنا</h5>
                    <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>الأردن، عمان</p>
                    <p class="mb-2"><i class="fa fa-phone-alt me-3"></i>+962 7700 0000</p>
                    <p class="mb-2"><i class="fa fa-envelope me-3"></i>info@gmail.com</p>
                    <div class="d-flex pt-3">
                        <a class="btn btn-square btn-secondary rounded-circle me-2" href="#"><i class="fab fa-twitter"></i></a>
                        <a class="btn btn-square btn-secondary rounded-circle me-2" href="#"><i class="fab fa-facebook-f"></i></a>
                        <a class="btn btn-square btn-secondary rounded-circle me-2" href="#"><i class="fab fa-youtube"></i></a>
                        <a class="btn btn-square btn-secondary rounded-circle me-2" href="#"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-white mb-4">روابط سريعة</h5>
                    <a class="btn btn-link" href="@Url.Action("About", "Home")">من نحن</a>
                    <a class="btn btn-link" href="@Url.Action("Contact", "Home")">اتصل بنا</a>
                    <a class="btn btn-link" href="@Url.Action("Service", "Home")">خدماتنا</a>
                    <a class="btn btn-link" href="#">الشروط والأحكام</a>
                    <a class="btn btn-link" href="#">الدعم</a>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-white mb-4">موقعنا</h5>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d387190.2799026342!2d-74.2598756877944!3d40.69767006777951!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c250b06d9d8f91%3A0xc80b8f06e177fe62!2sNew+York%2C+USA!5e0!3m2!1sen!2s!4v1550463278013" width="100%" height="200" frameborder="0" style="border:0" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </div>




    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/wow/wow.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/lib/counterup/counterup.min.js"></script>
    <script src="~/lib/parallax/parallax.min.js"></script>
    <script src="~/lib/lightbox/js/lightbox.min.js"></script>


    <script src="~/js/main.js"></script>
</body>
</html>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
