@model IEnumerable<project5_voting.Models.Ad>

@{
    ViewBag.Title = "advertisementAdmin";
}

<h2>Index</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nationalId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.data)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.listId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.partyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.electionArea)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.URL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nationalId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.listId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.partyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.electionArea)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                <img src="~/Images/@item.URL" alt="No Image" width="100" height="100" />
            </td>

            <td>@Html.DisplayFor(modelItem => item.status)</td>
            <td>
                @Html.ActionLink("رؤية التفاصيل ", "Details", new { id = item.id }) |
                @Html.ActionLink("حذف", "Delete", new { id = item.id }) |
            </td>


            <td>
                @if (item.status != "Published")
                {
                    @Html.ActionLink("Publish", "Publish", new { id = item.id })
                }
            </td> |


        </tr>
    }

</table>
